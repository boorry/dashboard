<!-- src/main/resources/view/dashboard.fxml -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.dash.controller.DashboardController"
      spacing="20" alignment="TOP_CENTER"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20;">

    <!-- En-tête -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="lblWelcome" text="Bienvenue, Agent"
               style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Déconnexion" onAction="#handleLogout"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>

    <!-- Statut actuel -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
        <Label text="Statut actuel :" style="-fx-font-size: 16;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="lblCurrentStatus" text="Hors ligne"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="lblTimer" text="00:00:00" style="-fx-font-size: 18;"/>
        </HBox>

        <!-- Boutons de statut -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Disponible" onAction="#setStatusDisponible"
                    styleClass="status-btn" userData="DISPONIBLE"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
            <Button text="En appel" onAction="#setStatusEnAppel"
                    styleClass="status-btn" userData="EN_APPEL"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="En pause" onAction="#setStatusEnPause"
                    styleClass="status-btn" userData="EN_PAUSE"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
            <Button text="Hors ligne" onAction="#setStatusHorsLigne"
                    styleClass="status-btn" userData="HORS_LIGNE"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        </HBox>
    </VBox>

    <!-- Statistiques rapides -->
    <GridPane hgap="20" vgap="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
        <Label text="Temps total aujourd'hui :" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblTotalTime" text="00:00:00" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Appels traités :" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblCallCount" text="0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Graphique (à remplir plus tard) -->
    <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
        <Label text="Répartition des activités" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <Pane fx:id="chartContainer" prefHeight="200" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5;">
            <Label text="Graphique en cours de chargement..." alignment="CENTER" wrapText="true"/>
        </Pane>
    </VBox>

</VBox>
